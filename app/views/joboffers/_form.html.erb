<%= content_for :primary_content do %>

  <%= form_with(model: joboffer, local: true) do |form| %>
    <% if joboffer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(joboffer.errors.count, "error") %> prohibited this joboffer from being saved:</h2>

        <ul>
          <% joboffer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="mt-10 sm:mt-0">
    <div class="md:grid md:grid-cols-4 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900"><%= titlePage %></h3>
          <p class="mt-1 text-sm leading-5 text-gray-600">
            Where the magic happens!
          </p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-3">
        <form action="#" method="POST">
          <div class="overflow-hidden shadow sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">

                <div class="col-span-6 sm:col-span-6">
                  <label for="first_name" class="block text-sm font-medium leading-5 text-gray-700"><%= form.label :title %></label>
                  <%= form.text_field :title, class:"mt-1 form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
                </div>

      
                <div class="col-span-6 sm:col-span-6">
                  <label for="email_address" class="block text-sm font-medium leading-5 text-gray-700"> <%= form.label :description %></label>
                  <%= form.text_area :description, class:"mt-1 form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
                </div>

              </div>
            </div>
            <div class="px-4 py-3 text-right bg-gray-50 sm:px-6">
              <%= link_to 'Back', joboffers_path, class:"text-sm text-gray-500 mr-2" %>
              <%= form.submit class:"btn btn-blue btn-small" %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% end %>
<% end %>

